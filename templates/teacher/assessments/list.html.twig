{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block sidebar %}
{{ include("teacher/_sidebar.html.twig") }}
{% endblock %}
{% block topbar %}
{{ include("teacher/_topbar.html.twig") }}
{% endblock %}

{% block body %}

{% for project in projects %}
<div class="col-xl-4 col-md-6 mb-4">
	<div class="card shadow h-100 py-2">
		<div class="card-body">
			<div class="row no-gutters align-items-center">
				<div class="col mr-2">
					<div class=" font-weight-bold text-danger text-uppercase mb-1">
						{{project.course.name}} / {{project.term.name}} / {{project.name}}
					</div>
					<table class="table table-sm">

					{% for studentClasse in project.course.classe.currentStudents %}
					<tr>
						<td>
							{{studentClasse.student.firstName}} {{studentClasse.student.lastName | upper}}
						</td>
						<td>
							{{status[project.id][studentClasse.student.id] | get_submission_status}}
						</td>
						<td>
							<a href="{{path('teacher_assess', {'student_id': studentClasse.student.id, 'project_id': project.id}) }}"><i class="fas fa-pencil-alt"> </i></a>
						</td>
					</tr>
					{% endfor %}
				</table>

				</div>
			</div>
		</div>
	</div>
</div>
{% endfor %}

{% endblock %}
