{% extends 'base.html.twig' %}

{% block page_title %}Tableau de bord
{% endblock %}

{% block sidebar %}
	{{ include("teacher/_sidebar.html.twig") }}
{% endblock %}
{% block topbar %}
	{{ include("teacher/_topbar.html.twig") }}
{% endblock %}

{% block body %}

	<!-- A projets-->
	<div class="col-xl-6 col-md-6 mb-4">
		<div class="box">
			<div class="box-header">

				<h3>
					Projets en cours
				</h3>
			</div>
			<div class="box-body">

				<table class="table table-striped table-sm text-xs">
					<tbody>

						{% for project in projects %}
							<tr>
								<td>{{project.course.name}}</td>
								<td>{{project.name}}</td>
								<td>{{project.hardDeadline|date("d/m")}}</td>
								<td>
									<a title="Modifier" data-toggle="modal" data-target="#projectModal" href="{{ path('teacher_projects_edit', {project_id: project.id, action: 'edit'}) }}">
										<i class="fas fa-pencil-alt"></i>
									</a>
								</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
			</div>

		</div>
	</div>
</div>

<!-- ./ projets -->{% endblock %}
