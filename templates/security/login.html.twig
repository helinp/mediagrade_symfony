{% extends 'base_security.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}



<main class="col-md-3 text-center login" >

	<form method="post" action="{{path("app_login")}}" >

		<h1 style="margin-bottom:0"><img alt="MediaGrade" src="/img/logo_white.svg" style="width:150px"/></h1>
		<fieldset>
			<div class="form-group">
				<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
			</div>
			<div class="form-group">
				<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
			</div>
			<div class="form-group">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>

			{#
			Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			See https://symfony.com/doc/current/security/remember_me.html

			<div class="checkbox mb-3">
			<label>
			<input type="checkbox" name="_remember_me"> Remember me
			</label>
			</div>
			#}
			{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
			<div class="mb-3">
				Vous êtes identifé comme {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter ?</a>
			</div>
			{% endif %}

			<button class="btn btn-primary" type="submit">
				S'identifier
			</button>
		</fieldset>
	</form>

</main>



{% endblock %}
