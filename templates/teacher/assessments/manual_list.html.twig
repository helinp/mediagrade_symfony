{% extends 'base.html.twig' %}

{% block page_title %}Encoder en masse
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col col-md-6">
			<div class="box">
				<div class="box-body">
							{% if projects | length > 0 %}
								<table class="table table-hover">
									{% for project in projects %}
										<tr>
											<td>
												{{project.course.name}}
											</td>
											<td>
												{{project.term.name}}
											</td>
											<td>
												{{project.name}}
											</td>
											<td>
												<a href="{{path('teacher_manual_assess', {'project_id': project.id}) }}">
													<i class="fas fa-pencil-alt"></i>
												</a>
											</td>
										</tr>
									{% endfor %}
								</table>
							{% else %}
								Aucune évaluation à encoder.
							{% endif %}


				</div>
			</div>
		</div>
	</div>

{% endblock %}
