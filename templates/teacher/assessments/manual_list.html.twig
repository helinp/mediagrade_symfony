{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block sidebar %}
{{ include("teacher/_sidebar.html.twig") }}
{% endblock %}
{% block topbar %}
{{ include("teacher/_topbar.html.twig") }}
{% endblock %}

{% block body %}

<div class="col-xl-4 col-md-6 mb-4">
	<div class="card shadow h-100 py-2">
		<div class="card-body">
			<div class="row no-gutters align-items-center">
				<div class="col mr-2">
					{% if projects | length > 0 %}
					<table class="table table-sm">

					{% for project in projects %}
						<tr>
							<td>
								{{project.course.name}} 
							</td>
							<td>
								{{project.term.name}}
							</td>
							<td>
								{{project.name}}
							</td>
							<td>
								<a href="{{path('teacher_manual_assess', {'project_id': project.id}) }}"><i class="fas fa-pencil-alt"> </i></a>
							</td>
						</tr>
					{% endfor %}
				</table>
				{% else %}
					Aucune évaluation à encoder.
				{% endif %}

				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
