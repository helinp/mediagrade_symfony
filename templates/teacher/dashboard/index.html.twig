{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block sidebar %}
{{ include("teacher/_sidebar.html.twig") }}
{% endblock %}
{% block topbar %}
{{ include("teacher/_topbar.html.twig") }}
{% endblock %}

{% block body %}

<!-- A projets-->
<div class="col-xl-6 col-md-6 mb-4">
	<div class="card border-left-primary shadow h-100 py-2">
		<div class="card-body">
			<div class="row no-gutters align-items-center">
				<div class="col mr-2">
					<div class=" font-weight-bold text-primary text-uppercase mb-1">
						Projets en cours
					</div>
					<div class="">
						<table class="table table-striped table-sm text-xs">
							<tbody>

								{% for project in projects %}
								<tr>
									<td>{{project.course.name}}</td>
									<td>{{project.name}}</td>
									<td>{{project.hardDeadline|date("d/m")}}</td>
									<td><a title="Modifier" data-toggle="modal" data-target="#projectModal" href="{{ path('teacher_projects_edit', {project_id: project.id, action: 'edit'}) }}"><i class="fas fa-pencil-alt"> </i></a></td>
								</tr>
								{% endfor %}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div><!-- ./ projets -->


{% endblock %}
